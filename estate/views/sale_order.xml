<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Le type de vue -->
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">Vue de formulaire de commande de vente</field>
            <field name="model">sale.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <!-- La structure de la vue -->
                <form string="Commande de vente">
                    <sheet>
                        <!-- Ajouts des champs de date de formation et d'employÃ© -->
                        <field name="training_date" />
                        <field name="employee_id" />

                        <!-- Ajout du champ de montant d'approbation -->
                        <field name="amount" />

                        <!-- Ajout du champ de groupe de gestionnaire -->
                        <field name="manager_group_id" />

                        <!-- Ajout du bouton pour demander l'approbation -->
                        <button name="request_approval" string="Demander l'approbation" type="object" class="oe_highlight" attrs="{'invisible': [('amount', '<', 500)]}"/>

                        <!-- Ajout du bouton de confirmation de commande de vente -->
                        <button name="action_confirm" string="Confirmer la commande" type="object" class="oe_highlight" attrs="{'invisible': [('amount', '>=', 500)]}"/>
                        
                        <!-- Ajout du bouton de confirmation de commande de vente -->
                        <button name="choose_training_date" string="Choisir la date de formation" type="object"/>                    
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>